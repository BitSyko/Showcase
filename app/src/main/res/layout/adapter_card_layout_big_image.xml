<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        card_view:cardBackgroundColor="@color/card_background"

        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CardView_paidthemes2"
        android:elegantTextHeight="false"
        android:elevation="5dp"
        android:background="@color/card_background"
        android:backgroundTint="@color/card_background"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">


        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5.59"
            >


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="216dp"
                android:id="@+id/iv_themeImage"
                />

            <TextView
                android:textColor="@color/text_color_inverse"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/paidcard2header"
                android:layout_gravity="start"
                android:textStyle="bold"
                android:elevation="5dp"
                android:layout_alignBottom="@+id/iv_themeImage"
                android:textSize="24sp"
                android:paddingBottom="8dp"
                android:background="#1a000000"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:id="@+id/txtName"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have a look at the paid Overlays."
                android:layout_gravity="start|top"
                android:layout_marginStart="16dp"
                android:textColor="@color/textColorPrimary"
                android:elevation="5dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/iv_themeImage"
                android:layout_marginRight="16dp"
                android:textSize="16sp"
                android:id="@+id/txtSurname"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>