<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48.0dip"
        android:text="@string/AndroidVersion"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"

        android:layout_marginLeft="16dp"
        android:textSize="16dp"
        android:textColor="#ff333333"
        android:layout_marginRight="8.0dip"
        android:gravity="center|left"/>

    <Spinner
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:id="@+id/androidVersionSpinner"
        android:layout_alignParentEnd="false"
        android:layout_marginEnd="16dp"
        android:spinnerMode="dropdown"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48.0dip"
        android:text="@string/AndroidPlatform"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8"

        android:textSize="16sp"
        android:textColor="#ff333333"
        android:layout_marginRight="8.0dip"
        android:gravity="center|left"
        android:layout_marginTop="4dp" />

    <Spinner
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:id="@+id/androidPlatformSpinner"
        android:layout_alignStart="@+id/androidVersionSpinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/androidVersionSpinner"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48.0dip"
        android:text="@string/DisplayDensity"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView8"

        android:textSize="16sp"
        android:textColor="#ff333333"
        android:layout_marginRight="8.0dip"
        android:gravity="center|left"
        android:layout_marginTop="4dp" />

    <Spinner
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:id="@+id/androidDensitySpinner"
        android:layout_alignStart="@+id/androidVersionSpinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/androidPlatformSpinner"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48.0dip"
        android:text="@string/LayersVersion"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView8"

        android:textSize="16sp"
        android:textColor="#ff333333"
        android:layout_marginRight="8.0dip"
        android:gravity="center|left"
        android:layout_marginTop="4dp" />

    <Spinner
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:id="@+id/LayersVersionSpinne"
        android:layout_alignStart="@+id/androidVersionSpinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/androidDensitySpinner"
        android:layout_marginRight="16dp" />

    <CheckBox android:gravity="center|right"
        android:id="@+id/fontCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="48.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_below="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp" />
    <TextView
        android:textSize="16sp"
        android:textColor="#ff333333"
        android:gravity="center|left"
        android:id="@+id/search_filter_closed_captions_label"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginRight="8.0dip"
        android:text="Font"
        android:layout_toLeftOf="@id/fontCheckbox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_alignTop="@+id/fontCheckbox"
        android:layout_marginLeft="16dp" />

    <CheckBox android:gravity="center|right"
        android:id="@+id/bootanimationCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="48.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_below="@+id/fontCheckbox"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp" />
    <TextView
        android:textSize="16sp"
        android:textColor="#ff333333"
        android:gravity="center|left"
        android:id="@+id/bootanimation_label"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginRight="8.0dip"
        android:text="@string/Bootanimation"
        android:layout_toLeftOf="@+id/bootanimationCheckbox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_alignTop="@+id/bootanimationCheckbox"
        android:layout_marginLeft="16dp" />
</RelativeLayout>